<Window x:Class="RegExFileRenamer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegExFileRenamer"
        mc:Ignorable="d"
        Title="RegExFileRenamer" Height="695" Width="909" Background="#FFEAEAEA" Icon="Windows Logo.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="9*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="OpenExplorerButton" Content="Open Explorer" HorizontalAlignment="Right" Margin="0,19,106,0" VerticalAlignment="Top" Width="91" Click="OpenExplorerButton_Click" Grid.Column="1" Height="20"/>
        <Button x:Name="ScanDirectoryButton" Content="Scan Directory" HorizontalAlignment="Right" Margin="0,19,10,0" VerticalAlignment="Top" Width="91" Click="ScanDirectoryButton_Click" Grid.Column="1" Height="20"/>
        <Button x:Name="TestRegexButton" Content="Test Regex" HorizontalAlignment="Right" Margin="0,63,10,0" VerticalAlignment="Top" Width="91" Click="TestRegexButton_Click" Grid.Column="1" Height="20"/>
        <Button x:Name="ApplyRegexButton" Content="Apply Regex Rename" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="267" Height="27" FontSize="15" Click="ApplyRegexButton_Click"/>
        <TextBox x:Name="DirectoryTextBox" Height="20" Margin="10,19,202,0" TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="DirectoryTextBox_TextChanged" Grid.ColumnSpan="2"/>
        <TextBox x:Name="RegexTextBox" Height="20" Margin="10,63,5,0" TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="RegexTextBox_TextChanged"/>
        <TextBox x:Name="ReplacementTextBox" Height="20" Margin="0,63,106,0" TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="ReplacementTextBox_TextChanged" Grid.Column="1"/>
        <CheckBox x:Name="RegexTestedCheckBox" Content="Regex Tested" HorizontalAlignment="Right" Margin="0,92,12,0" VerticalAlignment="Top" IsHitTestVisible="False" Grid.Column="1" Height="15" Width="89"/>
        <CheckBox x:Name="FolderScannedCheckBox" Content="Folder Scanned" HorizontalAlignment="Right" Margin="0,92,106,0" VerticalAlignment="Top" IsHitTestVisible="False" Grid.Column="1" Height="15" Width="102"/>
        <ListBox x:Name="FilesFoundListBox" Margin="10,112,5,47" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="False"/>
        <ListBox x:Name="PostRegexListBox" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Visible" Margin="0,112,10,47" Grid.Column="1" ScrollViewer.CanContentScroll="False"/>
        <Label x:Name="RegularLabel" Content="Replacement" HorizontalAlignment="Left" Margin="0,39,0,0" VerticalAlignment="Top" FontFamily="Microsoft Sans Serif" FontSize="12" Grid.Column="1" Height="24" Width="81"/>
        <Label x:Name="RegexLabel" Content="Regular Expression" HorizontalAlignment="Left" Margin="10,39,0,0" VerticalAlignment="Top" FontFamily="Microsoft Sans Serif" FontSize="12" Height="24" Width="115"/>
        <Label x:Name="FileDirectoryLabel" Content="File Directory" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" FontFamily="Microsoft Sans Serif" FontSize="12" Height="24" Width="81"/>
        <Label x:Name="FilesInDirectoryLabel" Content="Files In Directory" HorizontalAlignment="Left" Margin="10,88,0,0" VerticalAlignment="Top" FontFamily="Microsoft Sans Serif" FontSize="12" Height="24" Width="100"/>
        <Label x:Name="FilesAfterRegexLabel" Content="Files After Regex" HorizontalAlignment="Left" Margin="0,88,0,0" VerticalAlignment="Top" FontFamily="Microsoft Sans Serif" FontSize="12" Grid.Column="1" Height="24" Width="102"/>
    </Grid>
</Window>
